<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="700.0" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.page.PageCategorieController">
   <children>
      <HBox minHeight="400.0" minWidth="700.0" prefHeight="400.0" prefWidth="700.0">
         <children>
            <VBox alignment="CENTER" minWidth="100.0" spacing="20.0">
               <children>
                  <Button fx:id="addCateg" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" onAction="#ajoutCateg" prefHeight="60.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/ajouter.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="deleteCateg" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" onAction="#supprCateg" prefHeight="60.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/croix.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="editCateg" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" onAction="#modifCateg" prefHeight="60.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/modif.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="deleteCateg1" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" onAction="#chercherCateg" prefHeight="60.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/chercher.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
            <TableView fx:id="tabCateg" cache="true" fixedCellSize="23.0" nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="titreCateg" editable="false" maxWidth="1.7976931348623157E308" minWidth="300.0" prefWidth="125.0" resizable="false" style="-fx-alignment: CENTER;" text="Titre" />
                  <TableColumn fx:id="visuelCateg" maxWidth="1.7976931348623157E308" minWidth="300.0" prefWidth="125.0" resizable="false" style="-fx-alignment: CENTER;" text="Visuel" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>
