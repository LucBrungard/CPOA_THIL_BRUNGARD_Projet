<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="700.0" prefHeight="400.0" prefWidth="700.0" stylesheets="@../../css/pageCss.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.page.PageClientController">
   <children>
      <HBox>
         <children>
            <VBox fx:id="vbox_options" alignment="CENTER" minWidth="100.0" spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="addClient" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" onAction="#ajoutClient" prefHeight="60.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/ajouter.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="deleteClient" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" onAction="#supprClient" prefHeight="60.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/croix.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="editClient" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" onAction="#modifClient" prefHeight="60.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/modif.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="searchClient" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/chercher.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="detailClient" minHeight="60.0" minWidth="60.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../image/details.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
            <TableView fx:id="tabClient" cache="true" fixedCellSize="23.0" minHeight="400.0" minWidth="600.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="400.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="nomClient" editable="false" maxWidth="-1.0" minWidth="120.0" prefWidth="-1.0" resizable="false" style="-fx-alignment: CENTER;" text="Nom" />
                  <TableColumn fx:id="prenomClient" editable="false" maxWidth="-1.0" minWidth="120.0" prefWidth="-1.0" resizable="false" style="-fx-alignment: CENTER;" text="Prenom" />
                  <TableColumn fx:id="cpClient" editable="false" maxWidth="-1.0" minWidth="120.0" prefWidth="-1.0" resizable="false" sortable="false" style="-fx-alignment: CENTER;" text="Code Postal" />
                  <TableColumn fx:id="villeClient" editable="false" maxWidth="-1.0" minWidth="120.0" prefWidth="-1.0" resizable="false" style="-fx-alignment: CENTER;" text="Ville" />
                  <TableColumn fx:id="paysClient" editable="false" maxWidth="-1.0" minWidth="120.0" prefWidth="-1.0" resizable="false" sortable="false" style="-fx-alignment: CENTER;" text="Pays" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>
